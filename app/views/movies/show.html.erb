<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <h1>上映詳細</h1>
        <div class="col-4">
            <%= @movie.image_url%>
        </div>

        <div class="col-4">
            <div class = "bg-primary text-white">
                <% if @movie.is_showing%>
                    公開中
                <% else %>
                    公開予定
                <% end %>
            </div>
            <div class = "bg-primary text-white mt-2">
                <%= @movie.name%>
            </div>
            <div class = "bg-primary text-white mt-2">
                <%= @movie.year %>年公開
            </div>
            <div class = "bg-primary text-white mt-2">
                <%= @movie.description%>
            </div>
        </div>

        <div class = "col-8">
            <div class = "bg-primary text-white mt-5">
                上映スケジュール
            </div>
            <% @schedules.each do |schedule|%>
                <table class = "table">
                    <thead>
                        <tr>
                            <th>開始時刻</th>
                            <th>終了時刻</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><%= schedule.start_time %></td>
                            <td><%= schedule.end_time %></td>
                        </tr>
                    </tbody>
                </table>
            <% end %>
        </div>
    </div>
</div>