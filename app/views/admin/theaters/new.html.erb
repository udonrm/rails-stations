<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class = "col-4">
            <%= form_with model: [:admin, @theater] do |f| %>
                <%= f.label :name, "劇場名", class: 'form-label' %>
                <%= f.text_field :name, class: 'form-control text-center' %>
                <%= f.submit "作成", class: 'btn btn-primary mt-4' %>
            <% end %>
        </div>
    </div>
</div>