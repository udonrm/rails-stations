<table class = "table">
    <thead>
        <tr class = "table-primary">
            <th>ID</th>
            <th>映画タイトル</th>
            <th>公開年</th>
            <th>上映中か</th>
            <th>概要</th>
            <th>画像URL</th>
            <th>作成日時</th>
            <th>更新日時</th>
        </tr>
    </thead>
    <% @movies.each do |movie| %>
        <tr>
            <td><%= movie.id %></td>
            <td><%= link_to movie.name, edit_admin_movie_path(movie)%></td>
            <td><%= movie.year %></td>
            <td>
                <% if movie.is_showing %>
                    上映中
                <% else %>
                    上映予定
                <% end %>
            </td>
            <td><%= safe_join(movie.description.split("\n"),tag(:br)) %></td>
            <td><%= movie.image_url %></td>
            <td><%= movie.created_at %></td>
            <td><%= movie.updated_at %></td>
        </tr>
    <% end %>
</table>